<p id="notice"><%= notice %></p>

<div class="table-container">

  <h1>Listing Conditions</h1>

  <div class="row text-center table-responsive">
    <div class="container-fluid">
     <table class="table table-bordered table-striped table-condensed">        <thead>
      <tr>
        <th class="text-center">Condition name</th>
        <th class="text-center">Description</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @conditions.each do |condition| %>
      <tr>
        <td><%= condition.condition_name %></td>
        <td><%= condition.description %></td>
        <td><%= link_to 'Show', condition,  class: "btn btn-info" %></td>
        <td><%= link_to 'Edit', edit_condition_path(condition),  class: "btn btn-info" %></td>
        <td><%= link_to 'Destroy', condition, method: :delete, data: { confirm: 'Are you sure?' },  class: "btn btn-info" %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
</div>

<br>

<%= link_to 'New Condition', new_condition_path %>
</div>
