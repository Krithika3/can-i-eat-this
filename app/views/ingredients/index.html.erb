<p id="notice"><%= notice %></p>

<div class="table-container">

  <h1>Listing Ingredients</h1>

   <div class="row text-center table-responsive">
     <div class="container-fluid">
      <table class="table table-bordered table-striped table-condensed">
        <thead>
          <tr>
            <th class="text-center">Ingredient name</th>
            <th class="text-center">Description</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @ingredients.each do |ingredient| %>
            <tr>
              <td><%= ingredient.ingredient_name %></td>
              <td><%= ingredient.description %></td>
              <td><%= link_to 'Show', ingredient, class: "btn btn-info" %></td>
              <td><%= link_to 'Edit', edit_ingredient_path(ingredient) , class: "btn btn-info"%></td>
              <td><%= link_to 'Destroy', ingredient, method: :delete, data: { confirm: 'Are you sure?' } , class: "btn btn-info" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
  <br>

  <%= link_to 'New Ingredient', new_ingredient_path , class: "btn btn-info"%>

</div>
